<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface">

    <!-- Header -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Notification Messages"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Message Type Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message Type"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="?attr/colorSurface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Message Type"
                            android:textSize="16sp"
                            android:textColor="?attr/android:textColorPrimary" />

                        <TextView
                            android:id="@+id/tvMessageType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="14sp"
                            android:textColor="?attr/android:textColorSecondary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_dashboard"
                        app:tint="?attr/android:textColorSecondary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Active Messages Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active Messages"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_marginBottom="12dp" />

            <!-- Messages RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvActiveMessages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- Add Custom Message Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddCustomMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Custom Message"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.TextButton"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="start" />

            <!-- Notification Times Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Times"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/android:textColorPrimary"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <!-- Times RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNotificationTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- Add Time Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Notification Time"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="start" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
