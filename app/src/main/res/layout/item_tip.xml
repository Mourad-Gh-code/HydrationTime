<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Icon Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/iconContainer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivTipImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                app:tint="@android:color/white"
                android:contentDescription="Conseil icon" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Titre du conseil -->
        <TextView
            android:id="@+id/tvTipTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Buvez dès le matin"
            android:textSize="18sp"
            android:textColor="?attr/android:textColorPrimary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/iconContainer"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvTipDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Commencez votre journée avec un grand verre d'eau"
            android:textSize="14sp"
            android:textColor="?attr/android:textColorSecondary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvTipTitle"
            app:layout_constraintStart_toEndOf="@id/iconContainer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/iconContainer" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?attr/android:listDivider"
            app:layout_constraintTop_toBottomOf="@id/iconContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="end"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Learn More Text -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Appuyez pour en savoir plus"
                android:textSize="11sp"
                android:textColor="?attr/android:textColorSecondary"
                android:gravity="start|center_vertical" />

            <!-- Bouton Partager -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="Partager"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/green"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_share"
                app:iconSize="16dp"
                app:iconPadding="4dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>